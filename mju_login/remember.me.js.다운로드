$(document).ready(function() {
	var remember = $.cookie('__remb_me_');
	if (remember) {
	    $('#input-userId').val($.cookie('__remb_me_id_'));
	    $('#remember-me').attr("checked", true);
	}
	
	$('#signin-form').submit(function() {
		if ($('#remember-me').is(':checked')) {
			var expires_day = 1;
			
			$.cookie('__remb_me_id_', $('#input-userId').val(), { expires: expires_day, path: '/' });
			$.cookie('__remb_me_', true, { expires: expires_day, path: '/' });
		} else {
			// reset cookies.
			$.removeCookie('__remb_me_id_', { path: '/' });
			$.removeCookie('__remb_me_', { path: '/' });
		}

		return true;
	});
	
});
