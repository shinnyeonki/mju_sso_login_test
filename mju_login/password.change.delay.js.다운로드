$(document).ready(function() {

    $('#delay_pw_btn').on('click', function(event){
        /* password change delay */
        $('#delay_pw_btn').attr('disabled', 'disabled');
        setTimeout(function() { $('#delay_pw_btn').removeAttr('disabled')}, 1000);
    
        $('#delay_input').val('Y');
       
        $('#password-change-form').submit();
    });
	
});

